<UserControl x:Class="PRView.UserControls.MainChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRView.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <local:Chart_Line x:Name="Canvas_1" 
                              ViewMaxValueX="{Binding ViewMaxValueX}"
                              ViewMaxValueY="{Binding ViewMaxValueY}"
                              ViewMinValueX="{Binding ViewMinValueX}"
                              ViewMinValueY="{Binding ViewMinValueY}"
                              NumberOfGridX="{Binding NumberOfGridX}"
                              NumberOfGridY="{Binding NumberOfGridY}"
                              IsViewVisible="{Binding Canvas1_Enable}"/>
        </Border>
        <Border Grid.Row="1" >
            
            <Canvas x:Name="Canvas_2"  Visibility="Visible"  >
             
            </Canvas>
        </Border>
        <Border Grid.Row="2">
            <Canvas x:Name="Canvas_3">

            </Canvas>
        </Border>
        <Border Grid.Row="3">
            <Canvas x:Name="Canvas_4">

            </Canvas>
        </Border>
        <Border Grid.Row="4">
            <Canvas x:Name="Canvas_5">

            </Canvas>
        </Border>
    </Grid>
</UserControl>
