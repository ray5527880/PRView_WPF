<UserControl x:Class="PRView.testUserCon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PRView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--<UserControl.DataContext>
        <local:testUserCon/>
    </UserControl.DataContext>-->
    <Grid  Loaded="Grid_Loaded" >
        <Canvas>
            <Canvas Panel.ZIndex="1">
                <Image DataContext="{Binding Source, ElementName=image}" x:Name="image"  />
            </Canvas>
            <Canvas Panel.ZIndex="0">
                <Path Stroke="Blue" Data="m 9,0 L 90,100"/>
                <Image DataContext="{Binding Source, ElementName=image}" x:Name="testimage"  />
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
